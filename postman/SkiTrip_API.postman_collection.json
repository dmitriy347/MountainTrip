      "name": "Auth",
      "item": [
        {
          "name": "Get Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "",
                  "// Проверяем, что запрос успешен",
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// Парсим ответ",
                  "const responseJson = pm.response.json();",
                  "",
                  "// Сохраняем токены в Environment",
                  "if (responseJson.access) {",
                  "    pm.environment.set(\"access_token\", responseJson.access);",
                  "    console.log(\"✅ Access token saved\");",
                  "}",
                  "",
                  "if (responseJson.refresh) {",
                  "    pm.environment.set(\"refresh_token\", responseJson.refresh);",
                  "    console.log(\"✅ Refresh token saved\");",
                  "}",
                  "",
                  "// Проверяем, что токены есть в ответе",
                  "pm.test(\"Access token exists\", function () {",
                  "    pm.expect(responseJson.access).to.exist;",
                  "});",
                  "",
                  "pm.test(\"Refresh token exists\", function () {",
                  "    pm.expect(responseJson.refresh).to.exist;",
                  "});"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
