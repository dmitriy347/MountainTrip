[flake8]
# Максимальная длина строки (согласована с Black)
max-line-length = 88

# Игнорируемые директории
exclude =
    .git,
    __pycache__,
    */migrations/*,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info

# Игнорируемые ошибки
ignore =
    # E203: whitespace before ':' (конфликт с Black)
    E203,
    # W503: line break before binary operator (устаревшее правило)
    W503,

# Файлы с особыми правилами
per-file-ignores =
    settings.py:E402,E501

# Максимальная сложность функций
max-complexity = 10